    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    body {
        font-family: Arial, sans-serif;
        background-color: #121212;
        color: #e0e0e0;
        line-height: 1.6;
        transition: background-color 0.3s, color 0.3s;
    }
    
    header {
        background-color: #1f1f1f;
        padding: 20px 0;
    }
    
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
    }
    
    nav .logo {
        font-size: 24px;
        font-weight: bold;
        color: #ffffff;
    }
    
    nav ul {
        display: flex;
        list-style: none;
    }
    
    nav ul li {
        margin-left: 20px;
    }
    
    nav ul li a {
        text-decoration: none;
        color: #ffffff;
        font-size: 18px;
    }
    
    nav ul li a:hover {
        color: #ffa500;
    }
    
    section {
        padding: 60px 20px;
        max-width: 1000px;
        margin: 0 auto;
        text-align: center;
    }
    
    #home h1 {
        font-size: 36px;
        margin-bottom: 20px;
    }
    
    #home p {
        font-size: 20px;
    }
    
    #about,
    #services,
    #contact {
        margin-top: 40px;
    }
    
    button,
    input,
    textarea {
        padding: 10px 20px;
        border: none;
        margin-top: 20px;
        font-size: 16px;
        border-radius: 5px;
        background-color: #ffa500;
        color: #121212;
        cursor: pointer;
    }
    
    button:hover {
        background-color: #ff8c00;
    }
    
    form input,
    form textarea {
        width: 100%;
        margin-bottom: 10px;
    }
    
    footer {
        background-color: #1f1f1f;
        color: #e0e0e0;
        text-align: center;
        padding: 20px 0;
    }
    
    .light-theme {
        background-color: #ffffff;
        color: #000000;
    }
    
    .light-theme header {
        background-color: #f0f0f0;
    }
    
    .light-theme footer {
        background-color: #f0f0f0;
    }
    
    .light-theme nav ul li a {
        color: #000000;
    }